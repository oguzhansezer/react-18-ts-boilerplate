{
    "include": ["src"],
    "compilerOptions": {
        "esModuleInterop": true,
        "jsx": "react",
        "module": "esnext",
        "moduleResolution": "node",
        "lib": ["dom", "esnext"],
        "strict": true,
        "sourceMap": true,
        "target": "esnext",
        "removeComments": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    },

    "exclude": ["node_modules", "dist/**", "**/*.test.ts"]
}
